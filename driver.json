{
  "driver_id": "uc-intg-xbox",
  "name": { "en": "Xbox Integration" },
  "icon": "uc:gamepad-modern",
  "description": { "en": "Control your Xbox console and view gaming activity" },
  "version": "4.1.10",
  "developer": { "name": "Meir Miyara", "email": "meir.miyara@gmail.com" },
  "min_core_api": "0.5.1",
  "setup_data_schema": {
    "title": { "en": "Xbox Configuration" },
    "settings": [
      {
        "id": "client_id",
        "label": { "en": "Azure App Client ID" },
        "value": { "en": "Your Azure App Registration Client ID. See setup guide for instructions." },
        "field": { "text": { "value": "" } }
      },
      {
        "id": "client_secret",
        "label": { "en": "Azure App Client Secret (Optional)" },
        "value": { "en": "Required for Web apps only. Leave empty if using Mobile/Desktop app platform. See setup guide." },
        "field": { "password": { "value": "" } }
      },
      {
        "id": "console_count",
        "label": { "en": "Number of Xbox Consoles" },
        "value": { "en": "How many Xbox consoles do you want to configure?" },
        "field": {
          "number": {
            "value": 1,
            "min": 1,
            "max": 10,
            "steps": 1,
            "decimals": 0,
            "unit": { "en": "consoles" }
          }
        }
      },
      {
        "id": "info",
        "label": { "en": "Setup Instructions" },
        "field": {
          "label": {
            "value": {
              "en": "After clicking NEXT, you will provide a name and Xbox Live Device ID for each console. Find your Live ID in: Xbox Settings > Devices & connections > Remote features."
            }
          }
        }
      }
    ]
  }
}